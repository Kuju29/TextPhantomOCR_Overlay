{
  "manifest_version": 3,
  "name": "TextPhantom - OCR Overlay",
  "version": "2025.08.08",
  "description": "ðŸ§  Right-click any image â†’ translate images",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": { "service_worker": "background-service.js", "type": "module" },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": { "48": "icons/48.png" }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-service.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
