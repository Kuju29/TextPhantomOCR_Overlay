{
  "manifest_version": 3,
  "name": "TextPhantom - OCR Overlay",
  "version": "11.5.25",
  "description": "ðŸ§  Instantly translate text from images right inside your browser! Perfect for manga, webtoons, and any image-based content.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "OCR Overlay"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ]
}
